@using Moviepro.Models;
@{
    TSql_Informations sesUs = (TSql_Informations)Session["user"];
    TSql_Informations sesAd1 = (TSql_Informations)Session["ad1"];
    TSql_Informations sesAd2 = (TSql_Informations)Session["ad2"];
}

@if (sesUs != null)
{
    //Session user
    <div class="header">
        <div class="container">
            <div class="w3layouts_logo">
                <a href="/Home/Index"><h1>One<span>Movies</span></h1></a>
            </div>
            <div class="w3_search">
                <form action="@Url.Action("Search_Keyword", "Search")">
                    <input type="text" name="txtSearch" placeholder="Search" required="">
                    <input type="submit" value="Go">
                </form>
            </div>
            <div class="w3l_sign_in_register">
                <ul>
                    <li>Hello @sesUs.DisplayName</li>
                    <li><a href="@Url.Action("SignOut", "Accounts")">SignOut</a></li>
                </ul>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
}
else if (sesAd1 != null)
{
    //Session admin lv1
    <div class="header">
        <div class="container">
            <div class="w3layouts_logo">
                <a href="/Admin/Admin/Index"><img src="~/Content/images/dashboard-icon.png" width="70" height="60" /></a>
            </div>
            <div class="w3_search">
                <form action="@Url.Action("Search_Keyword", "Search")" method="post">
                    <input type="text" name="txtSearch" placeholder="Search" required="">
                    <input type="submit" value="Go">
                </form>
            </div>
            <div class="w3l_sign_in_register">
                <ul>
                    <li>Hello Admin @sesAd1.DisplayName</li>
                    <li><a href="@Url.Action("SignOut", "Accounts")">SignOut</a></li>
                </ul>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
}
else if (sesAd2 != null)
{
    //Session admin lv2
    <div class="header">
        <div class="container">
            <div class="w3layouts_logo">
                <a href="/Admin/Admin/Index"><img src="~/Content/images/dashboard-icon.png" /></a>
            </div>
            <div class="w3_search">
                <form action="@Url.Action("Search_Keyword", "Search")" method="post">
                    <input type="text" name="txtSearch" placeholder="Search" required="">
                    <input type="submit" value="Go">
                </form>
            </div>
            <div class="w3l_sign_in_register">
                <ul>
                    <li>Hello Admin @sesAd2.DisplayName</li>
                    <li><a href="@Url.Action("SignOut", "Accounts")">SignOut</a></li>
                </ul>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
}
else
{
    //session == null (default)
    <div class="header">
        <div class="container">
            <div class="w3layouts_logo">
                <a href="/Home/Index"><h1>One<span>Movies</span></h1></a>
            </div>
            <div class="w3_search">
                <form action="@Url.Action("Search_Keyword", "Search")">
                    <input type="text" name="txtSearch" placeholder="Search" required="">
                    <input type="submit" value="Go">
                </form>
            </div>
            <div class="w3l_sign_in_register">
                <ul>
                    <li><a href="#" data-toggle="modal" data-target="#myModal">Login</a></li>
                </ul>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
}

