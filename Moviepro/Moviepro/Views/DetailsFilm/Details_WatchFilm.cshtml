@model Moviepro.Models.TSql_Films
@{
    ViewBag.Title = "Details_WatchFilm";
    Layout = "~/Views/Layout/CommentLayout.cshtml";
}

<div>
        <div style="float: left; margin-left: 2%">
            <h2 style="color: brown; font-weight: bold">Watch movie: @Model.FilmName</h2><br />
        </div>
        <div class="horizontal">
            <div class="container" style="margin-top: 25%; position: relative; z-index:10222;">
                <iframe style="width: 100%; height: 600px" src="@Model.LinkFilm" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                <br />
                <p>
                    <a href="@Model.Download"><input type="button" name="btnWatch" value="Download" class="btn btn-danger" style="width:10%" /></a>
                    <button id="command" class="lightSwitcher btn btn-danger" style="color: white; text-decoration: none; width: 11%; height: 30px;margin-left: 1.2%">Tắt đèn</button>
                </p>
                <br />
            </div>
            <ul>
                <li class="list-group-item active" style="width: 100%; height: 50px">Description</li>
                <li class="list-group-item" style="width: 250%; height: 50px">@Model.Description</li>
            </ul>
        </div>
    </div>

<div id="shadow"></div>
